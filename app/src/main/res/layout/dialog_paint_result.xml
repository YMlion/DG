<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv"
            android:layout_width="235.0dip"
            android:layout_height="380.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50.0dip"
            android:background="@drawable/new_paint_finish"
            android:gravity="center_horizontal"
            android:paddingTop="80.0dip"
            android:text="古典音乐"
            android:textColor="#ffffffff"
            android:textSize="18.0dip"/>

        <ImageButton
            android:id="@+id/ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv"
            android:layout_alignTop="@id/tv"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="32.0dip"
            android:background="@drawable/paint_close_dialog"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_cut_screen"
            android:layout_width="190.0dip"
            android:layout_height="190.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170.0dip"/>

        <TextView
            android:id="@+id/tv_send_rose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_cut_screen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip"
            android:clickable="true"
            android:drawablePadding="5.0dip"
            android:drawableTop="@drawable/new_paint_finish_send_flower"
            android:gravity="center_horizontal"
            android:text="送3朵花"
            android:textColor="#ffffffff"
            android:textSize="12.0dip"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="30.0dip"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_cut_screen"
            android:layout_below="@id/iv_cut_screen"
            android:layout_marginTop="10.0dip"
            android:background="@null"
            android:drawablePadding="5.0dip"
            android:drawableTop="@drawable/new_paint_finish_save"
            android:text="保存"
            android:textColor="#ffffffff"
            android:textSize="12.0dip"/>
    </RelativeLayout>
</RelativeLayout>