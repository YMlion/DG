<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/new_paint_win_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="游戏结束"
            android:textColor="#ffffffff"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/iv_my_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:src="@drawable/new_def_head_icon"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/winner1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/winner2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/winner3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/winner4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/winner5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/winner6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loser1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/loser2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/loser3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/loser4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/loser5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/loser6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/new_def_head_icon"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>