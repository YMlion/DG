<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25.0dip"
            android:background="@drawable/new_paint_select_word_bg"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90.0dip"
                android:text="选词描述"
                android:textColor="#ffffffff"
                android:textSize="18.0dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4.0dip"
                android:text="请选择你要画的词！"
                android:textColor="#ffffffff"
                android:textSize="10.0dip"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="90.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="5.0dip"
                    android:background="@drawable/new_btn_paint_select_word"
                    android:text="杂技"
                    android:textColor="#ff666666"
                    android:textSize="15.0dip"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="90.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/new_btn_paint_select_word"
                    android:text="光棍"
                    android:textColor="#ff666666"
                    android:textSize="15.0dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="90.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="5.0dip"
                    android:background="@drawable/new_btn_paint_select_word"
                    android:text="磨刀石"
                    android:textColor="#ff666666"
                    android:textSize="15.0dip"/>

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="90.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="10.0dip"
                    android:background="@drawable/new_btn_paint_select_word"
                    android:text="采花贼"
                    android:textColor="#ff666666"
                    android:textSize="15.0dip"/>
            </LinearLayout>

            <TextView
                android:id="@+id/paint_change_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12.0dip"
                android:layout_marginTop="12.0dip"
                android:drawableLeft="@drawable/second_lbs_refresh"
                android:drawablePadding="5.0dip"
                android:gravity="center"
                android:paddingRight="20.0dip"
                android:text="@string/paint_change_world"
                android:textColor="@color/white"
                android:textSize="14.0sp"
                android:visibility="visible"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>